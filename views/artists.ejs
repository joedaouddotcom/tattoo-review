
<% include partials/header %>

<div class="container">
  <header class="jumbotron">
    <div class="container">
      <h1>Welcome to the Artists Page!</h1>
      <p>View our hand-picked tattoo artists from all over the world</p>
      <p><a class="btn btn-primary btn-lg" href="/artists/new">Create new Artist Profile</a></p>
    </div>
  </header>


<div class="row">
  <div class="col-lg-12"><h3>Our most popular Tatoo Artists</h3></div>
</div>

<div class="row" style="display:flex; flex-wrap: wrap;">
  <% artists.forEach(function(artists){ %>
    <div class="col-md-3 col-sm-6">
        <div class="img-thumbnail img-responsive">
          <img class="img-thumbnail img-responsive" src="<%= artists.image %>" alt="Artist photo"/>
            <div class="caption">
              <h4 class="text-xs-center"><%= artists.name %></h4>
            </div>
          </div>
      </div>
    <% }); %>
  </div>
</div>

<% include partials/footer %>
